div(ng-controller="Todos as todos")
  input(type="search", placeholder="Filter todos", ng-model="todos.search")
  span(class="remaining") {{todos.remaining()}} of {{todos.list.length}} remaining
  button(class="archive", ng-click="todos.archive()") Archive

  ul
    li(ng-repeat="todo in todos.list | filter:todos.search", ng-click="todos.toggle(todo)")
      input(type="checkbox", ng-model="todo.done")
      span(class="done-{{todo.done}}") {{todo.text}}

  form(ng-submit="todos.addTodo()")
    input(type="text", ng-model="todos.input", placeholder="add a new todo")
    button(type="submit") Add